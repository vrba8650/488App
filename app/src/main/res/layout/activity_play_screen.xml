<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#547d6d"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSuccessorFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:text="Score: X"
        android:textColor="#FFFFFFFF"
        android:textSize="32dp" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:background="#00FFFFFF"
        android:rotation="180"
        android:scaleX="2"
        android:scaleY="-2"
        android:translationX="350dp"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />


    <Button
        android:id="@+id/FailButton"
        android:layout_width="match_parent"
        android:layout_height="657dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="74dp"
        android:background="#00FFFFFF"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="677dp"
        android:scaleX="200"
        android:translationY="352dp"
        app:srcCompat="@android:drawable/bottom_bar" />

    <ImageView
        android:id="@+id/redsquareobject"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="365dp"
        android:layout_marginRight="365dp"
        app:srcCompat="@drawable/red_square" />

    <ImageView
        android:id="@+id/bluesquareobject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blue_square" />


</RelativeLayout>