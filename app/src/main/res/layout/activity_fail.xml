<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92474c"
    tools:context=".fail">

    <TextView
        android:id="@+id/txtYourScore"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:gravity="center"
        android:text="Your Score: XXX"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to go again!"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:translationX="75dp"
        android:translationY="300dp" />

    <Button
        android:id="@+id/TryAgainButton"
        android:layout_width="381dp"
        android:layout_height="318dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158dp"
        android:background="#00FFFFFF" />

    <TextView
        android:id="@+id/txtQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:translationX="165dp"
        android:translationY="475dp" />

    <Button
        android:id="@+id/quitButton"
        android:layout_width="270dp"
        android:layout_height="216dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-62dp"
        android:background="#00FFFFFF" />

    <TextView
        android:id="@+id/txtReminder"
        android:layout_width="155dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="Reminder: Tap when the blue square contacts the red square"
        android:textColor="#FFFFFF"
        android:translationX="125dp"
        android:translationY="530dp" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:background="#00FFFFFF"
        android:rotation="180"
        android:scaleX="2"
        android:scaleY="-2"
        android:translationX="350dp"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

</RelativeLayout>
